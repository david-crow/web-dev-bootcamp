<%- include("header") -%>

<div id="heading" class="box">
    <h1> <%= title %> </h1>
</div>

<div class="box">
    <% for (const item of items) { %>
        <div class="item">
            <input type="checkbox">
            <p> <%= item %> </p>
        </div>
    <% }; %>

    <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= title %>>+</button>
    </form>
</div>

<%- include("footer") -%>
